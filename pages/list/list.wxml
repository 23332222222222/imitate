<view class="con-top">
<view class="search {{bol ? '': 'active'}}">
  <label wx:if="{{bol}}" bindtap="searchHandler">
    <icon size="20" type='search'></icon>
    <view>搜索</view>
  </label>
  <view class="search-fome" wx:if="{{!bol}}">
    <icon type="search" size="18"></icon>
    <input type="text" placeholder="搜索" value="{{text}}" bindblur="inputHandler"/>
  </view>
</view>
<view class="no" wx:if="{{!bol}}" bindtap="noHandler">取消</view>
</view>

<view class="cells">
  <navigator wx:for="{{shops}}" wx:kye='{{item.id}}' url="/pages/shop/shop?item={{item.id}}">
    <image src="{{item.images[0]}}" mode="aspectFill"/>
    <view class="meta">
      <text class="name">{{item.name}}</text>
      <text class="phone">电话：{{item.phone || 'none'}}</text>
      <text class="address">地址：{{item.address}}</text>
      <text class="hours">营业时间：{{item.businessHours}}</text>
    </view>
    <view class="score">{{item.score || 'none'}}</view>
  </navigator>
  <view wx:if="{{hasMore}}" class="loadmore loading">正在加载</view>
  <view wx:else class="loadmore">客官，没有更多了</view>
</view>