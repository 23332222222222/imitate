.messages {
  margin: 60rpx 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}
.messages .item-title {
  font-size: 40rpx;
}
.messages .text {
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
  display: block;
}
.messages .image {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.messages .image text {
  font-size: 28rpx;
}
.messages .expand {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 30rpx;
  padding: 20rpx 0;
}
.messages .expand::after {
  content: '';
  display: inline-block;
  margin-right: 10rpx;
  height: 10rpx;
  width: 10rpx;
  border: 0 solid #ccc;
  border-width: 3rpx 3rpx 0 0;
  transform: matrix(1, 1, -1, 1, 0, 0);
}
